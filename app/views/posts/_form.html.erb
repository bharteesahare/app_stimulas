<%= form_with(model: post, data: { controller: 'form', action: 'submit->form#validate' }) do |form| %>
  <div data-controller="form">
    <% if post.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title, required: true, "data-form-target": "field" %>
      <div data-form-target="errorContainerForTitle" style="color: red"></div>
    </div>

    <div>
      <%= form.label :slug, style: "display: block" %>
      <%= form.text_field :slug, required: true, "data-form-target": "field" %>
      <div data-form-target="errorContainerForSlug" style="color: red"></div>
    </div>

    <div>
      <%= form.submit %>
    </div>
  </div>
<% end %>
